{
    "name": "dietercoopman/laravel-dashboard-laravelnews-tile",
    "description": "A Laravel News tile for Laravel Dashboard",
    "keywords": [
        "dietercoopman",
        "laravel-dashboard-laravelnews-tile"
    ],
    "homepage": "",
    "license": "MIT",
    "authors": [
        {
            "name": "Dieter Coopman",
            "email": "dieter@deltasolutions.be",
            "homepage": "https://www.deltasolutions.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^7.4",
        "mtownsend/xml-to-array" : "^2.0",
        "spatie/laravel-dashboard": "^2.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "DieterCoopman\\LaravelNewsTile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DieterCoopman\\LaravelNewsTile\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DieterCoopman\\LaravelNewsTile\\LaravelNewsTileServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
